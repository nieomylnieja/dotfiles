{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "statusLine": {
    "type": "command",
    "command": "npx -y ccusage statusline",
    "padding": 0
  },
  "permissions": {
    "allow": [
      "Bash(git log :*)",
      "Bash(git show :*)",
      "Bash(fd :*)",
      "Bash(ls :*)",
      "Bash(rg :*)",
      "Bash(make :*)",
      "Bash(go :*)"
    ],
    "deny": [
      "Read(*.env)"
    ],
    "defaultMode": "default"
  }
}
