{
  "$schema": "https://json.schemastore.org/claude-code-settings.json",
  "statusLine": {
    "type": "command",
    "command": "npx -y ccusage statusline",
    "padding": 0
  },
  "extraKnownMarketplaces": {
    "anthropic-plugins": {
      "source": {
        "source": "github",
        "repo": "anthropics/claude-code"
      }
    }
  },
  "enabledPlugins": {
    "pr-review-toolkit@anthropic-plugins": true,
    "frontend-design@anthropic-plugins": true
  },
  "permissions": {
    "allow": [
      "Bash(git log:*)",
      "Bash(git show:*)",
      "Bash(fd:*)",
      "Bash(ls:*)",
      "Bash(rg:*)",
      "Bash(make:*)",
      "Bash(go:*)",
      "Bash(gh issue view:*)"
    ],
    "deny": [
      "Read(*.env)"
    ],
    "defaultMode": "default"
  }
}
