# Dotfiles path is essential so we can pollute the $HOME with less files
export DOTFILES="$HOME/.dotfiles"

if ! [ -d "$DOTFILES" ] || ! [ -n "$BASH_VERSION" ]; then
  echo "dotfiles are not present, nothing to load"
  exit 0
fi

source "$DOTFILES/config/bash/env"

source "$DOTFILES/config/bash/path"

source "$DOTFILES/config/bash/bashrc"
